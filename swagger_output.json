  "definitions": {
    "RiverGet": {
      "type": "array",
      "items": {
        "properties": {
          "branchId": {
            "type": "number"
          },
          "riverPoints": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "_id": {
                  "type": "string"
                },
                "lat": {
                  "type": "number"
                },
                "lng": {
                  "type": "number"
                },
                "orderInBranch": {
                  "type": "number"
                },
                "branchId": {
                  "type": "number"
                },
                "device": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      },
      "required": [
        "branchId",
        "riverPoints"
      ]
    },
    "RiverAdd": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "lng": {
              "type": "number",
              "format": "double"
            },
            "lat": {
              "type": "number",
              "format": "double"
            }
          },
          "required": [
            "lng",
            "lat"
          ]
        }
      },
      "minItems": 1
    },
    "RiverPoint": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number",
          "format": "double"
        },
        "lng": {
          "type": "number",
          "format": "double"
        }
      },
      "required": [
        "lat",
        "lng"
      ]
    },
    "ErrorModel": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        }
      }
    },
    "DeviceGet": {
      "type": "array",
      "items": {
        "properties": {
          "_id": {
            "type": "string"
          },
          "lat": {
            "type": "number"
          },
          "lng": {
            "type": "number"
          },
          "orderInBranch": {
            "type": "number"
          },
          "branchId": {
            "type": "number"
          },
          "device": {
            "type": "boolean"
          }
        }
      }
    },
    "MeasurementAdd": {
      "type": "object",
      "properties": {
        "pointId": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "type": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      },
      "required": [
        "pointId",
        "date",
        "type",
        "value"
      ]
    },
    "Measurement": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "pointId": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "type": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      },
      "required": [
        "_id",
        "pointId",
        "date",
        "type",
        "value"
      ]
    },
    "Interpolation": {
      "type": "object",
      "properties": {
        "scale": {
          "type": "number"
        },
        "branchId": {
          "type": "string"
        },
        "segmentInd": {
          "type": "number"
        },
        "riverPoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string"
              },
              "branchId": {
                "type": "number"
              },
              "orderInBranch": {
                "type": "number"
              },
              "device": {
                "type": "boolean"
              },
              "lng": {
                "type": "number"
              },
              "lat": {
                "type": "number"
              },
              "value": {
                "type": "number"
              }
            },
            "required": [
              "_id",
              "branchId",
              "orderInBranch",
              "device",
              "lng",
              "lat",
              "value"
            ]
          }
        }
      },
      "required": [
        "scale",
        "branchId",
        "segmentInd",
        "riverPoints"
      ]
    },
    "Login": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
